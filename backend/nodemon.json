{
  "watch": [
    "src/**/*.js",
    "prisma/**/*.js",
    "prisma/**/*.prisma",
    "prisma/schema/**/*.prisma"
  ],
  "ext": "js,json,prisma",
  "ignore": [
    "node_modules/**/*",
    "*.test.js",
    "*.spec.js"
  ],
  "env": {
    "NODE_ENV": "development"
  },
  "delay": "1000",
  "legacyWatch": true,
  "polling": true
} 